<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="wwwroot\assets\WinSdAdSchemaGuid.json" />
    <Content Remove="wwwroot\assets\WinSdTrustee.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Blazorise.Animate" Version="1.3.2" />
    <PackageReference Include="Blazorise.Bootstrap" Version="1.3.2" />
    <PackageReference Include="Blazorise.Components" Version="1.3.2" />
    <PackageReference Include="Blazorise.DataGrid" Version="1.3.2" />
    <PackageReference Include="Blazorise.Icons.FontAwesome" Version="1.3.2" />
    <PackageReference Include="Blazorise.LoadingIndicator" Version="1.3.2" />
    <PackageReference Include="Blazorise.Snackbar" Version="1.3.2" />
    <PackageReference Include="Blazorise.SpinKit" Version="1.3.2" />
    <PackageReference Include="Blazorise.TreeView" Version="1.3.2" />
    <PackageReference Include="KristofferStrube.Blazor.FileSystemAccess" Version="3.2.2" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.13" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.13" PrivateAssets="all" />
    <PackageReference Include="Microsoft.NET.WebAssembly.Threading" Version="7.0.0" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\KzA.Blazor.HexDump\KzA.Blazor.HexDump.csproj" />
    <ProjectReference Include="..\..\KzA.Blazor.PacParser\KzA.Blazor.PacParser.csproj" />
    <ProjectReference Include="..\..\ProfileXMLBuilder\ProfileXMLBuilder.Lib\ProfileXMLBuilder.Lib.csproj" />
    <ProjectReference Include="..\..\WfpXmlHelper\WfpXmlHelper.csproj" />
    <ProjectReference Include="..\..\WinSdUtil\WinSdUtil.Lib\WinSdUtil.Lib.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\assets\WinSdAdSchemaGuid.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="wwwroot\assets\WinSdTrustee.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
