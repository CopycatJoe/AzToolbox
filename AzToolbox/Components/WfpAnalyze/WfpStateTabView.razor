@using WfpXmlHelper

<Tabs SelectedTab="filters">
    <Items>
        <Tab Name="filters">Filters</Tab>
        <Tab Name="providers">Providers</Tab>
    </Items>
    <Content>
        <TabPanel Name="filters">
            <FilterDataGrid Filters="Filters" />
        </TabPanel>
        <TabPanel Name="providers">
            <ProviderDataGrid Providers="Providers" />
        </TabPanel>
    </Content>
</Tabs>

@code {
    [Parameter]
    public IEnumerable<Filter> Filters { get; set; } = Array.Empty<Filter>();
    [Parameter]
    public IEnumerable<Provider> Providers { get; set; } = Array.Empty<Provider>();
}
